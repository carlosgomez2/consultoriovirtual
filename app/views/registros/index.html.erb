<!-- Search -->
<div class="row">
  <div class="col-xs-12 pull-right">
    <%= form_tag registros_path, :method => "get" do %>
      <p>
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Buscar paciente" %>
      </p>
      <p class="pull-right">
        <%= submit_tag "Buscar", class: 'btn btn-default' %>
      </p>
    <% end %>
  </div>
</div>
<!-- ./Search -->

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th>Segundo nombre</th>
            <th>Apellido paterno</th>
            <th>Apellido materno</th>
            <th>Telefono principal</th>
            <!-- <th>Celular</th> -->
            <th>Email</th>
            <!-- <th>Ocupacion</th>
            <th>Fecha de nacimiento</th>
            <th>Direccion</th>
            <th>Codigo postal</th>
            <th>Ciudad</th>
            <th>Estado</th> -->
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @registros) do |registro| %>
            <td><%= registro.Nombre %></td>
            <td><%= registro.Segundo_Nombre %></td>
            <td><%= registro.Apellido_Paterno %></td>
            <td><%= registro.Apellido_Materno %></td>
            <td><%= registro.Telefono_principal %></td>
            <!-- <td><%= registro.Celular %></td> -->
            <td><%= registro.Email %></td>
            <!-- <td><%= registro.Ocupacion %></td>
            <td><%= registro.Fecha_de_Nacimiento %></td>
            <td><%= registro.Direccion %></td>
            <td><%= registro.Codigo_Postal %></td>
            <td><%= registro.Ciudad %></td>
            <td><%= registro.Estado %></td> -->
            <td><%= link_to 'Ver', registro, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_registro_path(registro), class: "btn btn-warning" %></td>
        <td><%= link_to 'Eliminar', registro, class: "btn btn-danger", method: :delete, data: { confirm: 'Estas seguro de que quieres eliminar este registro?' } %></td>
      <% end %>
    </tbody>
  </table>
  <div class="row">
  <div class="col-xs-4 page-header">
  <%= link_to new_registro_path, class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Paciente
  <% end %>
</div>
</div>
</div>
