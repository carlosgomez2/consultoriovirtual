<body id="page-top" class="index">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to "Medicus", welcome_homepage_path, class: "navbar-brand" %>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <!-- Login -->
                    <p class="navbar-text pull-right">
                    <% if user_signed_in? %>Bienvenido <%= current_user.email %>
                    <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %> |
                    <%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                    <% else %>
                    <%= link_to "Registrarse", new_user_registration_path, :class => 'navbar-link'  %> |
                    <%= link_to "Ingresar", new_user_session_path, :class => 'navbar-link'  %>
                    <% end %>
                    <!-- /.login -->
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <!-- Inicio Grid Section -->
    <section id="start">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3 class="text-center">Dashboard</h3>
                </div>
                <div class="col-lg-12 text-center">
                Bienvenido Dr. <%= current_user.email %>
                </div>
            </div>
            <hr />

            <!-- espacio de search -->

            <div class="row">
                <div class="col-sm-4 start-item">
                    <div class="page-header">
                        <%= image_tag ("cabin.png"), :alt=> "cabin", :title=>"cabin", :class=>"img-responsive" %>
    					<%= link_to new_registro_path, class: 'btn btn-success' do %>
    					    <span class="glyphicon glyphicon-plus"></span>
    					       Nuevo Paciente
    					<% end %>
    				</div>
                </div>
                <div class="col-sm-4 start-item">
                    <div class="page-header">
                        <%= image_tag ("cabin.png"), :alt=> "cabin", :title=>"cabin", :class=>"img-responsive" %>
    					<%= link_to registros_path, class: 'btn btn-success' do %>
    						<span class="glyphicon glyphicon-search"></span>
    							Pacientes Ingresados
    					<% end %>
    				</div>
                </div>
                <div class="col-sm-4 start-item">
                    <div class="page-header">
                        <%= image_tag ("cabin.png"), :alt=> "cabin", :title=>"cabin", :class=>"img-responsive" %>
    					<%= link_to receta_path, class: 'btn btn-success' do %>
    						<span class="glyphicon glyphicon-list-alt"></span>
    							Generar Receta
    					<% end %>
    				</div>
                </div>
            </div>
        </div>
    </section>

</body>

</html>
