<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Sistema para Gestión de Clínicas Médicas">
    <meta name="author" content="Carlos Gomez">

    <title>Consultorio Virtual</title>

    <!-- Bootstrap Core CSS - Uses Bootswatch Flatly Theme: http://bootswatch.com/flatly/ -->
    <%= stylesheet_link_tag "bootstrap" %>

    <!-- Custom CSS -->
    <%= stylesheet_link_tag "freelancer" %>

    <!-- Custom Fonts -->
    <%= stylesheet_link_tag "font-awesome" %>
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="page-top" class="index">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to "VirtualDoc", welcome_homepage_path, class: "navbar-brand" %>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <!-- Login -->
                    <p class="navbar-text pull-right">
                    <% if user_signed_in? %>Bienvenido <%= current_user.email %>
                    <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %> |
                    <%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                    <% else %>
                    <%= link_to "Registrarse", new_user_registration_path, :class => 'navbar-link'  %> |
                    <%= link_to "Ingresar", new_user_session_path, :class => 'navbar-link'  %>
                    <% end %>
                    <!-- /.login -->
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <!-- Inicio Grid Section -->
    <section id="start">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Que deseas hacer?</h2>
                    <hr class="star-primary">
                </div>
            </div>

            <!-- espacio de search -->

            <div class="row">
                <div class="col-sm-4 start-item">
                    <div class="page-header">
									  <%= link_to new_registro_path, class: 'btn btn-primary' do %>
									    <span class="glyphicon glyphicon-plus"></span>
									    Nuevo Paciente
									  <% end %>
										</div>
                </div>
                <div class="col-sm-4 start-item">
                    <div class="page-header">
									  <%= link_to registros_path, class: 'btn btn-primary' do %>
									    <span class="glyphicon glyphicon-search"></span>
									    Pacientes Ingresados
									  <% end %>
										</div>
                </div>
                <div class="col-sm-4 start-item">
                    <div class="page-header">
									  <%= link_to receta_path, class: 'btn btn-primary' do %>
									    <span class="glyphicon glyphicon-list-alt"></span>
									    Generar Receta
									  <% end %>
										</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll visible-xs visible-sm">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

   

    <%= javascript_include_tag "jquery" %>
    <%= javascript_include_tag "bootstrap" %>
    <%= javascript_include_tag "classie" %>
    <%= javascript_include_tag "cbpAnimatedHeader" %>
    <%= javascript_include_tag "jqBootstrapValidation" %>
    <%= javascript_include_tag "contact_me" %>
    <%= javascript_include_tag "freelancer" %>

</body>

</html>
